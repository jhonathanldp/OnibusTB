<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/imagem_principal"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_directions_bus_white_48dp"
            android:drawableRight="@drawable/ic_directions_bus_white_48dp"
            android:text="@string/nome_titulo"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/descricaoPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/descricaoPrincipal"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="1.2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/horarioUrbano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/botao_estilo"
            android:drawableEnd="@drawable/ic_location_city_black_48dp"
            android:drawableRight="@drawable/ic_location_city_black_48dp"
            android:onClick="telaRegioes"
            android:text="@string/horario_urbano"
            android:textAlignment="center"
            android:textColor="@color/preto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botaoFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/botao_estilo"
            android:drawableEnd="@drawable/ic_star_black_48dp"
            android:drawableRight="@drawable/ic_star_black_48dp"
            android:onClick="telaRegioes"
            android:text="@string/favoritos"
            android:textAlignment="center"
            android:textColor="@color/preto"
            android:textSize="20sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desc_main"
            android:textAlignment="center"
            android:textColor="@color/preto"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="italic" />
    </RelativeLayout>
</LinearLayout>